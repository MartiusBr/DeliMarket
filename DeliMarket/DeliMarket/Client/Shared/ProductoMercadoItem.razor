
<div class="cart-item">
    <a @onclick="OnRemoved" class="delete-item">x</a>
    <div class="title">@(Detalle.Productomercado.Producto.Titulo)</div>
    <div class="item-price">
        @Detalle.GetFormattedTotalPrice()
    </div>
</div>

@code {
    [Parameter] public Detalle Detalle { get; set; }
    [Parameter] public EventCallback OnRemoved { get; set; }    
}
